{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build DOS Program",
      "type": "shell",
      "command": "wcl",
      "args": [
        "src\\*.c",
        "src\\components\\*.c",
        "src\\systems\\*.c",
        "-Iinclude",
        "-bt=dos16",
        "-oi",
        "-os",
        "-s",
        "fpi87=none",
        "-fe=build\\main.exe",
        "-fo=build\\objs\\",
        "-fr=build\\errs\\",
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}
